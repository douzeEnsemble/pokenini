{% set filteredAnyTypes = app.request.get('at', [])|filter(v => v) %}

{% for item in types %}
<div class="col-xl-2 col-lg-3 col-md-4 col-6 mb-2 form-check filters-types-container">
    <label 
        class="filters-types pokemon-type-{{ item.slug }} badge" 
        for="at_{{ item.slug }}"
    >
        {{ locale is same as('fr') ? item.frenchName : item.name }}
    </label>
    <input 
        class="form-check-input"
        type="checkbox" 
        value="{{ item.slug }}" 
        name="at[]"
        id="at_{{ item.slug }}"
        {{ ((filteredAnyTypes is empty or item.slug in filteredAnyTypes) ? 'checked' : '') }}
    >
</div>						
{% endfor %}