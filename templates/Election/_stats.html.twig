<div id="election-stats" class="row mt-xl-5 mt-lg-4 mt-3 ms-xl-5 ms-lg-3 ms-0 me-xl-5 me-lg-3 me-0">
  <div class="row align-items-center">
    <div class="col-xl-4 offset-xl-4 col-lg-6 offset-lg-3 col-12 text-center">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title mb-5">{{ 'election.stats.title'|trans }}</h4>
          <p class="card-text">
            {{- 'election.stats.round.start'|trans({'n': metrics.roundCount}) -}}
            <strong>{{- metrics.roundCount -}}</strong>
            {{- 'election.stats.round.middle'|trans({'n': metrics.roundCount}) -}}
            <strong>{{- metrics.totalRoundCount -}}</strong>
            {{- 'election.stats.round.end'|trans({'n': metrics.roundCount}) -}}
          </p>
          <p class="card-text">
            {% if detachedCount %}
            {{- 'election.stats.favorite_count.start'|trans({'n': detachedCount}) -}}
            <strong>{{- detachedCount -}}</strong>
            {{- 'election.stats.favorite_count.end'|trans({'n': detachedCount}) -}}
            {% else %}
            {{- 'election.stats.favorite_count.none'|trans({'n': detachedCount}) -}}
            {% endif %}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>